{
  "manifest_version": 3,
  "name": "Call Agent",
  "description": "Optimized Auto Call & Phone Checker with Call Tracking",
  "version": "1.4.0",
  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content-utils.js",
        "content-call-tracking.js",
        "content-problematic.js",
        "content-pagination.js",
        "content-main.js",
        "inject-copy-buttons.js",
        "content-password-helper.js",
        "content-move-no-answer.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Call Agent"
  }
}